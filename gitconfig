[alias]
    st   = status
    ci   = commit
    br   = branch
    co   = checkout
    df   = diff --color
    dc   = diff --color --cached
    lg   = log -p --color
    who  = shortlog -s --
    lp   = log --graph --pretty=format:'%Cred%h%Creset â€” %s %Cgreen(%cr)%Creset %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --color
    undo = reset --hard
    lol  = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls   = ls-files
    git  = "!f() { git \"$@\"; }; f"

# coloring!
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

